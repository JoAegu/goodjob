<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goodjob.normalmember">
	<insert id="normalJoin"
		parameterType="com.goodjob.normalmember.model.NormalMemberDTO">
		insert into normalmember
		values(normalmember_idx.nextval,#{id},#{pwd},#{name},#{birth},#{gender},#{email},#{tel},#{addr},sysdate,0,'비활성')
	</insert>
	<select id="norIdDuplicateCheck" parameterType="String"
		resultType="Integer">
		select count(*) from normalmember where id=#{id}
	</select>
	<select id="norLogin" parameterType="Map"
		resultType="com.goodjob.normalmember.model.NormalMemberDTO">
		select * from normalmember where id=#{id} and pwd=#{pwd}
	</select>
	<update id="norUpdate"
		parameterType="com.goodjob.normalmember.model.NormalMemberDTO">
		update normalmember set
		id=#{id},pwd=#{pwd},name=#{name},addr=#{addr},tel=#{tel} where
		idx=#{idx}
	</update>
</mapper>