<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goodjob.review">
	<select id="reviewList"	resultType="com.goodjob.review.model.ReviewDTO">
		select com_name, count(*) as normal_idx from review Group by com_name
	</select>
	
	<!--미완 -->
	<insert id="reviewWrite"
		parameterType="com.goodjob.review.model.ReviewDTO" >
		INSERT INTO review
		VALUES (keyword_idx_nextval, 1, 3,	#{com_name}, sysdate , #{keyword} , '활성')
	</insert>
	
	
</mapper>