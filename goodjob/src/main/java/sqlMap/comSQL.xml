<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goodjob.companymember">
	<insert id="comJoin"
		parameterType="com.goodjob.companymember.model.CompanyMemberDTO">
		insert into companymember
		values(companymember_idx.nextval,#{id},#{pwd},#{com_name},#{name},#{com_num},#{email},#{addr},#{detail_addr},#{tel},#{com_birth},sysdate,0,'비활성')
	</insert>
	<select id="comIdDuplicateCheck" parameterType="String" resultType="Integer">
		select count(*) from companymember where id=#{id}
	</select>
	<select id="getComMember" parameterType="Integer" resultType="com.goodjob.companymember.model.CompanyMemberDTO">
		select * from member,companymember where
		member.idx=companymember.member_idx and member.idx=#{idx}
	</select>

</mapper>
